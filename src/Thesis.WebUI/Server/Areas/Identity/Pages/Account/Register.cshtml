@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="row justify-content-center bg-image-login m-0">
    <div class="login-form col-10 col-sm-7 col-md-5 col-lg-4 col-xl-3">
        <form id="account" method="post">
            <div class="form-header-wrapper text-center">
                <h1 class="form-header">Rejestracja</h1>
                <h3 class="form-description">Utwórz nowe konto i korzystaj z serwisu za darmo</h3>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Wprowadź email"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="Wprowadź hasło"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Wprowadź ponownie hasło"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn">Zarejestruj</button>
            </div>
            <div class="form-group text-center">
                @*<p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>*@
                <p>
                    Masz już konto?
                    <a class="link-register" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"> Zaloguj się </a>
                    teraz
                </p>
                @*<p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>*@
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
